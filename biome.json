{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 10000000,
    "ignore": [
      "./public/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./.git/**/*",
      "./.next/**/*",
      "./out/**/*",
      "./src/styles/globals.css",
      "package-lock.json",
      "package.json",
      "./package.json",
      "/package.json"
    ],
    "include": ["./src/**/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noCommentText": "warn",
        "noExplicitAny": "off",
        "noRedeclare": "off"
      },
      "style": {
        "noUnusedTemplateLiteral": "warn",
        "noUselessElse": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "useTemplate": "warn",
        "useShorthandArrayType": "warn"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off",
        "useLiteralKeys": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "noSvgWithoutTitle": "off"
      },
      "nursery": {
        "noUnusedImports": "warn"
      },
      "correctness": {
        "noUnreachable": "off",
        "useExhaustiveDependencies": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 83
  }
}
